extends ../main-frame.pug

block content
    div.freeSpace

    .container-fluid
        .row
            .col-md-4.col-md-offset-4.text-center
                h2.form-signin-heading Register
                    br
                form.form-signin(action="/register" method="post")
                    ul.regLi
                        li
                            div.form-group
                                label.sr-only(for='username') First Name
                                input#first-name-register.form-control(type='text', placeholder='First Name', name="firstName" onfocus="this.placeholder = ''" onblur="this.placeholder ='First Name'")
                        li
                            div.form-group
                                label.sr-only(for='username') Last Name
                                input#last-name-register.form-control(type='text', placeholder='Last Name', name="lastName" onfocus="this.placeholder = ''" onblur="this.placeholder ='Last Name'")
                        li
                            div.form-group
                                label.sr-only(for='username') Gender
                                select#gender-register.form-control(name="gender" required='true', onfocus="this.placeholder = ''" onblur="this.placeholder ='Gender'")
                                    option(value="male") male
                                    option(value="female") female
                        li
                            div.form-group
                                label.sr-only(for='username') Age
                                input#age-register.form-control(type='text', placeholder='Age', name="age" required='true', onfocus="this.placeholder = ''" onblur="this.placeholder ='Age'")
                        li
                            div.form-group
                                label.sr-only(for='username') Username
                                input#username-register.form-control(type='text', placeholder='Username', name="username" onfocus="this.placeholder = ''" onblur="this.placeholder ='Username'")
                        li
                            div.form-group
                                label.sr-only(for='password') Password
                                input#password-register.form-control(type='password', name="password" placeholder='Password', onfocus="this.placeholder = ''" onblur="this.placeholder ='Password'")
                        li
                            div.form-group
                                label.sr-only(for='password') Repeat password
                                input#reenter-password-register.form-control(type='password', name="con-password" placeholder='Confirm Password', onfocus="this.placeholder = ''" onblur="this.placeholder ='Confirm Password'")
                        li
                            div.form-group
                                label.sr-only(for='username') E-Mail
                                input#email-register.form-control(type='email', placeholder='E-Mail', name="email" required='true', onfocus="this.placeholder = ''" onblur="this.placeholder ='E-Mail'")
                        li
                            div.form-group
                                label.sr-only(for='username') Avatar Url
                                input#avatar-register.form-control(type='text', placeholder='Avatar Url (optional)', name="avatar" required='true', onfocus="this.placeholder = ''" onblur="this.placeholder ='Avatar Url (optional)'")
                            br
                        button#btn-register.btn.register(type='submit' onclick='return false') Sign up
